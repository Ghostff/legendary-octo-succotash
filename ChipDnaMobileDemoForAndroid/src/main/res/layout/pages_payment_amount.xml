<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
            android:text="Market\nFull Name\nPackage Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selectedPackageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:textColor="#C5C5C5"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"/>

    <TextView
            android:text="$0.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/amount"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="70sp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textAlignment="center"
            android:textColor="@color/card_default"
            android:fontFamily="sans-serif-thin"
            android:typeface="sans"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toTopOf="@+id/continueButton"/>


    <TextView
            android:text="$0.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/remainingAmount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#C5C5C5"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/amount"/>

    <Button
            android:text="Continue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/continueButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout4"
            android:textSize="20sp"
            android:background="@drawable/primary_button"
            android:textColor="#FFFFFF"/>
    <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/tableLayout4">

        <TableRow
                android:layout_width="0dp"
                android:layout_height="294dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/tableRow_1"
                android:layout_marginEnd="10dp">
            <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_column="3"
                    android:text="1"
                    android:textSize="48sp"
                    android:background="@drawable/keypad_button"
                    android:elevation="4dp"
                    android:layout_margin="10dp"
                    android:stateListAnimator="@null"
                    android:id="@+id/keypad_2"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_column="3"
                    android:text="2"
                    android:textSize="48sp"
                    android:background="@drawable/keypad_button"
                    android:elevation="4dp"
                    android:layout_margin="10dp"
                    android:stateListAnimator="@null"
                    android:id="@+id/keypad_3"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_column="3"
                    android:text="3"
                    android:textSize="48sp"
                    android:background="@drawable/keypad_button"
                    android:elevation="4dp"
                    android:layout_margin="10dp"
                    android:stateListAnimator="@null"
                    android:id="@+id/keypad_1"/>
        </TableRow>
        <TableRow
                android:layout_width="0dp"
                android:layout_height="294dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/tableRow_2"
                android:layout_marginEnd="10dp">
            <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_column="3"
                    android:text="4"
                    android:textSize="48sp"
                    android:background="@drawable/keypad_button"
                    android:elevation="4dp"
                    android:layout_margin="10dp"
                    android:stateListAnimator="@null"
                    android:id="@+id/keypad_4"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_column="3"
                    android:text="5"
                    android:textSize="48sp"
                    android:background="@drawable/keypad_button"
                    android:elevation="4dp"
                    android:layout_margin="10dp"
                    android:stateListAnimator="@null"
                    android:id="@+id/keypad_5"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_column="3"
                    android:text="6"
                    android:textSize="48sp"
                    android:background="@drawable/keypad_button"
                    android:elevation="4dp"
                    android:layout_margin="10dp"
                    android:stateListAnimator="@null"
                    android:id="@+id/keypad_6"/>
        </TableRow>
        <TableRow
                android:layout_width="0dp"
                android:layout_height="294dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/tableRow_3"
                android:layout_marginEnd="10dp">
            <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_column="3"
                    android:text="7"
                    android:textSize="48sp"
                    android:background="@drawable/keypad_button"
                    android:elevation="4dp"
                    android:layout_margin="10dp"
                    android:stateListAnimator="@null"
                    android:id="@+id/keypad_7"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_column="3"
                    android:text="8"
                    android:textSize="48sp"
                    android:background="@drawable/keypad_button"
                    android:elevation="4dp"
                    android:layout_margin="10dp"
                    android:stateListAnimator="@null"
                    android:id="@+id/keypad_8"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_column="3"
                    android:text="9"
                    android:textSize="48sp"
                    android:background="@drawable/keypad_button"
                    android:elevation="4dp"
                    android:layout_margin="10dp"
                    android:stateListAnimator="@null"
                    android:id="@+id/keypad_9"/>
        </TableRow>
        <TableRow
                android:layout_width="0dp"
                android:layout_height="294dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/tableRow_4"
                android:layout_marginEnd="10dp">
            <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_column="3"
            />
            <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_column="3"
                    android:text="0"
                    android:textSize="48sp"
                    android:background="@drawable/keypad_button"
                    android:elevation="4dp"
                    android:layout_margin="10dp"
                    android:stateListAnimator="@null"
                    android:id="@+id/keypad_0"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_column="3"
                    android:text="⌫"
                    android:textSize="48sp"
                    android:background="@drawable/keypad_button"
                    android:elevation="4dp"
                    android:layout_margin="10dp"
                    android:stateListAnimator="@null"
                    android:id="@+id/keypad_backspace"/>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>